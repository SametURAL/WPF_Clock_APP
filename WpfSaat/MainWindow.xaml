<Window x:Class="WpfSaat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF clock-timer" Height="305.66" Width="387.736">
    <Grid>
        <StackPanel>
            <Border BorderBrush="Red" BorderThickness="2" Margin="10" Padding="10">
                <TextBlock Name="tblSaat" HorizontalAlignment="Center" FontWeight="ExtraBold" FontSize="20" Margin="0,10" Foreground="Black" />
            </Border>
            <Border BorderBrush="Red" BorderThickness="2" Margin="10" Padding="10">
                <TextBlock Name="tblGeriSayim" HorizontalAlignment="Center" FontWeight="ExtraBold" FontSize="20" Margin="0,10" Foreground="Black" />
            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <TextBlock Text="Geri Sayım Dakikası: " VerticalAlignment="Center" />
                <TextBox Name="txtDakika" Width="50" VerticalAlignment="Center" />
            </StackPanel>
            <Button Content="Geri Sayımı Başlat" HorizontalAlignment="Center" Margin="0,10" Click="StartTimerButton_Click" />
        </StackPanel>
    </Grid>
</Window>
